<%= simple_form_for [:curation_concern, actor] do |f| %>
  <% if f.error_notification -%>
    <div class="alert alert-error fade in">
      <strong>Wait don't go!</strong> There was a problem with your submission. Please review the errors below:
      <a class="close" data-dismiss="alert" href="#">&times;</a>
    </div>
  <% end -%>

  <%= render 'form_descriptive_fields', curation_concern: actor, f: f %>

  <%= render 'form_supplementary_fields', curation_concern: actor, f: f %>

  <%= render 'form_contributor_agreement', curation_concern: actor, contributor_agreement: contributor_agreement %>

  <div class="row">
    <div class="span12 form-actions">
      <%= f.submit class: 'btn btn-primary require-contributor-agreement' %>
      <%= link_to 'Cancel', root_path, class: 'btn btn-link' %>
    </div>
  </div>

<% end %>
